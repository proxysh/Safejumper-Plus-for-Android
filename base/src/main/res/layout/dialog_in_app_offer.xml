<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupContainerBackground"
    android:fitsSystemWindows="false"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.CardView
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/mainWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPaddingBottom="16dp"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/roboto_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/christmasOffer"
                android:textColor="@color/mainColor"
                android:textSize="24sp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/on_boarding_four"/>


            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_checkbox_checked"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/firstOfferText"
                    android:layout_marginStart="8dp"
                    fontPath="fonts/roboto_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/christmasOfferTextFirst"
                    android:textColor="@color/popupOfferText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_checkbox_checked"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/secondOfferText"
                    android:layout_marginStart="8dp"
                    fontPath="fonts/roboto_regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/christmasOfferTextSecond"
                    android:textColor="@color/popupOfferText"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <Button
                    android:id="@+id/shopNow"
                    style="@style/AppButton"
                    fontPath="fonts/roboto_bold.ttf"
                    android:layout_width="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="50"
                    android:backgroundTint="@color/buttonGreen"
                    android:text="@string/shopNow"
                    android:textColor="@color/mainWhite"/>

                <Button
                    android:id="@+id/cancel"
                    style="@style/AppButton"
                    fontPath="fonts/roboto_bold.ttf"
                    android:layout_width="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="50"
                    android:backgroundTint="@color/hintColor"
                    android:text="@string/cancel"
                    android:textColor="@color/mainWhite"/>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>