<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popupContainerBackground"
    android:fitsSystemWindows="false"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.CardView
        android:id="@+id/messageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/mainWhite"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPaddingBottom="16dp"
        app:contentPaddingLeft="8dp"
        app:contentPaddingRight="8dp"
        app:contentPaddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                fontPath="fonts/roboto_bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customerService"
                android:textColor="@color/mainBlack"
                android:textSize="20sp"/>


            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/contact_us"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>

            <TextView
                fontPath="fonts/roboto_regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:text="@string/contactUsText"
                android:textColor="@color/popupText"
                android:textSize="16sp"/>


            <Button
                android:id="@+id/contactUs"
                style="@style/AppButton"
                fontPath="fonts/roboto_bold.ttf"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="50"
                android:backgroundTint="@color/buttonGreen"
                android:text="@string/contactUs"
                android:textColor="@color/mainWhite"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>